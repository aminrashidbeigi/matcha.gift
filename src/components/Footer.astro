---
import { Icon } from 'astro-icon/components'
import CallToAction from './CallToAction.astro'
import ExternalLink from './ExternalLink.astro'
import Logo from './Logo.astro'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <p class="made-with-love">
        Made with <Icon name="lucide:heart" class="heart-icon" />
        {currentYear}
      </p>
      <div class="footer-links">
        <a href="/imprint" class="footer-link">Impressum</a>
      </div>
    </div>
  </div>
</footer>

<style lang="scss">
  .footer {
    opacity: 0.8;
    z-index: 1 !important;
    padding: 2rem 0;
    pointer-events: none !important;
    color: var(--foreground-color);
    text-align: center;

    .footer-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .made-with-love {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.5rem;
      z-index: 1 !important;
      pointer-events: none !important;
      font-size: 1.1rem;

      .heart-icon {
        animation: heartbeat 1.5s ease-in-out infinite;
        width: 1.2rem;
        height: 1.2rem;
        color: #e25555;
      }
    }

    .footer-links {
      z-index: 1 !important;
      pointer-events: auto !important;
    }

    .footer-link {
      opacity: 0.8;
      transition: opacity 0.2s ease;
      color: var(--foreground-color);
      font-size: 0.9rem;
      text-decoration: none;

      &:hover {
        opacity: 1;
        text-decoration: underline;
      }
    }
  }

  @keyframes heartbeat {
    0% {
      transform: scale(1);
    }
    14% {
      transform: scale(1.3);
    }
    28% {
      transform: scale(1);
    }
    42% {
      transform: scale(1.3);
    }
    70% {
      transform: scale(1);
    }
  }
</style>
